{
  "baseUrls": {
    "apiBase": "https://localhost:5099/api/",
    "webBase": "https://localhost:44315/"
  },
  "ConnectionStrings": {
    "CatalogConnection": "@AzureKeyVault('ConnectionStrings--CatalogConnection')",
    "IdentityConnection": "@AzureKeyVault('ConnectionStrings--IdentityConnection')"
  },
  "KeyVault": {
    "AZURE_KEY_VAULT_ENDPOINT": "https://<your-key-vault-domain>.vault.azure.net/"
